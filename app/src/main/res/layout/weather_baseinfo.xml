<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent">

    <TextView
        android:id="@+id/tv_custom_weather_baseinfo_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:paddingLeft="30dp"
        tools:text="晴"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:textSize="22dp"
        />


    <TextView
        android:id="@+id/tv_custom_weather_baseinfo_tempreture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_custom_weather_baseinfo_weather"
        android:layout_alignLeft="@id/tv_custom_weather_baseinfo_weather"
        tools:text="17"
        android:textColor="@color/white"
        android:textSize="150dp"
        />

    <TextView
        android:id="@+id/tempreture_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_custom_weather_baseinfo_tempreture"
        android:layout_toRightOf="@id/tv_custom_weather_baseinfo_tempreture"
        android:text="°C"
        android:textColor="@color/white"
        android:textSize="40dp"
        />
</RelativeLayout>