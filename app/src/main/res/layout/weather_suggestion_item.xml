<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_marginTop="10dp"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custom_weather_suggestion_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:src="@mipmap/air_conditioner"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/custom_weather_suggestion_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/weather_text"
            android:textSize="@dimen/suggestion_title_size"
            android:layout_marginTop="3dp"
            tools:text="空调指数"/>

        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/weather_text"
            android:textSize="@dimen/suggestion_title_size"
            android:layout_toRightOf="@+id/custom_weather_suggestion_type"
            android:text="---"/>

        <TextView
            android:id="@+id/custom_weather_suggestion_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line"
            android:textColor="@color/weather_text"
            android:textSize="@dimen/suggestion_title_size"
            android:layout_marginTop="3dp"
            tools:text="较少开启"/>

        <TextView
            android:id="@+id/custom_weather_suggestion_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/weather_text_gray"
            android:textSize="@dimen/suggestion_text_size"
            tools:text="气象条件对空气污染物稀释、扩散和清除无明显影响，易感人群应适当减少室外活动时间。"
            android:layout_below="@+id/custom_weather_suggestion_brief"/>



    </RelativeLayout>


</LinearLayout>